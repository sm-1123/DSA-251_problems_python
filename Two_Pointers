#P1:PAIR SUM
def pairSum(arr, n, target):
    # Write your code here.
    n = len(arr)
    sum = 0
    cnt = 0
    i = 0
    j = n-1

    while(i<j):
        sum = arr[i]+arr[j]
        if sum == target:
            cnt += 1
            i += 1
            j -= 1
        elif sum<target:
            i += 1
        else:
            j -= 1

    if cnt == 0:
        return -1
    else:
        return cnt
